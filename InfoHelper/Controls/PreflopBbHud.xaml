        <local:CellControl Grid.Column="0" Grid.Row="15" Style="{StaticResource IsolateHeaderStyle}" BorderThickness="{StaticResource CellMiddleBottomLeftBorderThickness}" Text="Iso (CC) p."></local:CellControl>
