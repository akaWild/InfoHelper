<Grid x:Class="InfoHelper.Controls.HudsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoHelper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <local:ActionsControl VerticalAlignment="Top" Margin="5" Data="{Binding Actions, UpdateSourceTrigger=PropertyChanged}">
                <local:ActionsControl.DataContext>
                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type local:HudsPanel}}" Path="DataContext.ActionsState"/>
                </local:ActionsControl.DataContext>
            </local:ActionsControl>
        </StackPanel>
        <local:HuPostflopAggressorIpHud Grid.Column="2" VerticalAlignment="Top" Margin="5">
            <local:HuPostflopAggressorIpHud.DataContext>
                <Binding RelativeSource="{RelativeSource AncestorType={x:Type local:HudsPanel}}" Path="DataContext.AggressorIpPostflopHudState"/>
            </local:HuPostflopAggressorIpHud.DataContext>
        </local:HuPostflopAggressorIpHud>
        <Grid Column="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <local:PreflopMatrixControl Grid.Row="0" Margin="0, 5, 5, 2.5" Data="{Binding PreflopData, UpdateSourceTrigger=PropertyChanged}">
                    <local:PreflopMatrixControl.DataContext>
                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type local:HudsPanel}}" Path="DataContext.PreflopMatrixState"/>
                    </local:PreflopMatrixControl.DataContext>
                </local:PreflopMatrixControl>
                <local:PreflopMatrixControl Grid.Row="1" Margin="0, 2.5, 5, 5" Data="{Binding PreflopData, UpdateSourceTrigger=PropertyChanged}">
                    <local:PreflopMatrixControl.DataContext>
                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type local:HudsPanel}}" Path="DataContext.PreflopMatrixState"/>
                    </local:PreflopMatrixControl.DataContext>
                </local:PreflopMatrixControl>
            </Grid>
        </Grid>
    </Grid>
</Grid>
