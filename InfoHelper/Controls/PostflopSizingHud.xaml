<UserControl x:Class="InfoHelper.Controls.PostflopSizingHud"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoHelper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <local:PostflopSizingRangeCellControl Grid.Column="0" Foreground="{StaticResource PostflopSizingRangeForeground}" Background="{StaticResource PostflopSizingRangeBackground}" HorizontalContentAlignment="Left" BorderBrush="Black" BorderThickness="0, 0, 1, 0" LowBound="{Binding LowBound}" UpperBound="{Binding UpperBound}"/>
        <local:PostflopSizingSampleCellControl Grid.Column="1" Background="{StaticResource DefaultPostflopSizingBackground}" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="0, 0, 1, 0" Sample="{Binding Sample}"/>
        <local:PostflopSizingEvCellControl Grid.Column="2" HorizontalContentAlignment="Center" Ev="{Binding Ev}" EvDelta="{Binding EvDelta}"/>
    </Grid>
</UserControl>
